  { \@@_date_aux_zh:nnn {#1} {#2} {#3} }
\cs_new:Npn \@@_date_aux_short_zh:nn #1#2
  {
    \int_to_arabic:n {#1} ~ { \exp_not:V \c_@@_name_year_zh_tl  } ~
    \int_to_arabic:n {#2} ~ { \exp_not:V \c_@@_name_month_zh_tl }
